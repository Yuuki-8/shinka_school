<div class=" border-bottom m-5">
  <div class="search-form">
    <%= search_form_for @q do |f| %>
      <div class="row no-padding no-margins">
        <div class="col-md-4">
            <%= f.label :title %><br>
            <%= f.search_field :title_cont %>
        </div>
        <div class="col-md-4">
            <%= f.label :place %><br>
            <%= f.search_field :place_cont %>
        </div>
        <div class="col-md-4">
          <div class="row">
            <%= f.label :実施日 %><br>
          </div>
          <div class="row row-cols-auto">
            <div class="row">
              <%= f.date_field :created_at_gteq,
                  include_blank: true,
                  class: 'form-control'%>
            </div>
            <div class="row">
              〜
            </div>
            <div class="row">
              <%= f.date_field :created_at_lteq_end_of_day,
                  include_blank: true,
                  class: 'form-control'%>
            </div>
          </div>
        </div>
      </div>
  </div>
      <%= f.submit "検索", class: "btn btn-primary btn-sm m-2" %>
    <% end %>
  </div>
</div>