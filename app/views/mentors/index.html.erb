<%= render "mentors/search" %>

<h1>メンター一覧</h1>
<table class="table">
  <thead style="background-color:#ccc;">
    <tr align="center" valign="middle">
      <th>イメージ</th>
      <th>名前</th>
      <th>性別</th>
      <th>職業</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mentors.each do |mentor| %>
      <tr align="center" valign="middle">
        <td><img height="60" src="<%=h mentor.image_url %>"/></td>
        <td><%= mentor.name %></td>
        <td><%= I18n.t("enums.mentor.gender.#{mentor.gender}") %></td>
        <td><%= mentor.job.name %></td>
        <td><%= link_to '詳細', mentor_path(mentor), action: :get, class: 'btn btn-success btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @mentors %>