
<div class="row">
  <%= form_with(model: @club) do |f| %>
    <%= render 'shared/error_messages', resource: f.object %>

    <div class="form-group">
      <%= f.label :name, 'サークル名' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :description, '活動内容' %>
      <%= f.text_field :description, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :image, 'サークルイメージ' %><br />
      <%= f.file_field :image,　class: "form-control mb-3", accept: 'image/*' %>
    </div>

    <%= f.submit "Save", class: "btn btn-success btn-lg m-5" %><span>　　　</span><%= link_to '一覧', clubs_path, class: 'btn btn-success btn-lg' %>
  <% end %>
</div>